---
// ExclusiveCollection.astro
import ExclusiveCollectionIsland from "./ExclusiveCollection.jsx";
import homeData from "../data/home.json";

const { exclusiveCollection } = homeData;
---

<section class="exclusive-collection-section">
  <ExclusiveCollectionIsland data={exclusiveCollection} client:load />
</section>

<style>
  .exclusive-collection-section {
    padding: 4rem 0;
  }

  @media (max-width: 768px) {
    .exclusive-collection-section {
      padding: 2rem 0;
    }
  }
</style>
