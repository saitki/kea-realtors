---
interface Props {
  title: string;
  description: string;
  city: string;
  src: string;
}
const { title, description, city, src } = Astro.props;
---

<div class="swiper-slide hero-slide position-relative">
  <img src={src} class="hero-bg" alt="" />
  <div class="hero-overlay"></div>

  <!-- Contenido -->
  <div class="hero-content container vh-100">
    <div
      class="hero-information text-white d-flex flex-column justify-content-between h-100 py-5"
    >
      <!-- Bloque principal - Centrado verticalmente a la izquierda -->
      <div class="flex-grow-1 d-flex align-items-center">
        <div class="hero-main" style="max-width: 550px; text-align: left;">
          <h1
            class="hero-title mb-3 text-start"
            style="font-size: 2rem; font-weight: 300;"
          >
            {title}
          </h1>

          <p
            class="hero-subtitle mb-4 text-start"
            style="font-size: 0.875rem; line-height: 1.5;"
          >
            {description}
          </p>

          <div class="text-start">
            <a
              href=""
              class="btn btn-secondary-900 rounded-pill text-white"
              style="font-size: 0.875rem; padding: 0.625rem 1.5rem;"
            >
              Discover the Collection
            </a>
          </div>
        </div>
      </div>

      <!-- City: abajo pero no al fondo total -->
      <div class="hero-location" style="padding-bottom: 2rem;">
        <div class="development-tag d-flex align-items-center gap-3">
          <span
            class="separator"
            style="width: 40px; height: 2px; background-color: white;"></span>
          <span style="font-size: 0.75rem; letter-spacing: 0.05em;">{city}</span
          >
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-slide {
    overflow: hidden;
  }

  .hero-bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-information {
    min-height: 100%;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 1.5rem !important;
    }

    .hero-subtitle {
      font-size: 0.75rem !important;
    }

    .hero-main {
      max-width: 100% !important;
    }

    .btn {
      font-size: 0.75rem !important;
      padding: 0.5rem 1rem !important;
    }
  }
</style>
